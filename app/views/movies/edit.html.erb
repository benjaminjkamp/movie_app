<form action="/movies/<%=@movie.id%>" method="post"> 
  <input type="hidden" name="_method" value="patch">
  <h2>Edit Movie Info></h2>
  <label for="title">Title: </label><input type="text" id="title" name="title" value="<%= @movie.title %>"><br>
  <label for="year">Year: </label><input type="number" id="year" name="year" value="<%= @movie.year %>"><br>
  <label for="director">Director: </label><input type="text" id="director" name="director" value="<%= @movie.director %>"><br>
  <label for="plot">Plot:</label><br><textarea name="plot" id="plot" cols="80" rows="7"><%= @movie.plot %></textarea><br>
  <h3><input type="submit" value="Save">  <a href="/movies/<%= @movie.id %>">Cancel</a></h3><br><br>
</form>